# OpenAI API配置
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，默认为官方API地址

# 服务设置
HOST=0.0.0.0
PORT=5000
DEBUG=True

# 模型设置
OPENAI_MODEL=gpt-3.5-turbo
# 可选模型: gpt-3.5-turbo, gpt-4, gpt-4-turbo (根据API访问情况调整)

# 安全设置 (可选)
# ACCESS_TOKEN=your_access_token_here

# 响应配置
MAX_TOKENS=500
TEMPERATURE=0.7

# 缓存配置
ENABLE_CACHE=True
CACHE_EXPIRATION=2592000  # 30天(单位:秒)

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost 
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=ocs_qa

# Redis配置
REDIS_HOST=127.0.0.1  # 使用Docker Compose时为服务名
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 测试服务配置 (仅用于test_service.py)
SERVICE_URL=http://localhost:5000